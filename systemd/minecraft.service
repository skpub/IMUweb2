[Unit]
Description=Minecraft Server

Wants=network.target
After=network.target

[Service]
Type=forking
EnvironmentFile=.env
User=${USER}
Group=${GROUP}
Nice=5
TimeoutStopSec=90

ProtectSystem=full
PrivateDevices=no
NoNewPrivileges=yes
PrivateTmp=no
InaccessiblePaths=/root /sys /srv -/opt /media -/lost+found
ReadWritePaths=${MC_HOME}

WorkingDirectory=${MC_HOME}
ExecStart=${MC_HOME}/service.sh start
ExecReload=${MC_HOME}/service.sh reload
ExecStop=${MC_HOME}/service.sh stop

[Install]
WantedBy=multi-user.target
